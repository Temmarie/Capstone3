<%= form_for @article do |f| %>
  <%= f.label :title %><br>
  <%= f.text_area :title, maxlength: 60, placeholder: 'Enter article title here', size: "70x1" %><br><br>

  <%= f.label :subtitle %><br>
  <%= f.text_area :subtitle, maxlength: 150, placeholder: 'Enter subtitle here', size: "70x2" %><br><br>

  <%= f.label :image, 'Upload Photo' %><br>
  <%= f.file_field :image %><br><br>

  <%= f.label :content %><br>
  <%= f.text_area :content, maxlength: 5200, placeholder: "Enter article details here", size: "70x20" %><br><br>

  <%= f.label :category %><br>
  <%= f.select :category_id, Category.all.map {|c| [c.category, c.id]} %><br><br>

  <%= f.submit %><br><br>
<% end %>
